<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Journal</title>
  <script src="http://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen flex flex-col items-center p-4">

  <h1 class="text-3xl mb-4">My Journal</h1>

  <!-- Entry Editor -->
    <form action="/entries" method="POST">
    <input type="date" name="date" required>
    <textarea class="px-3 py-2 rounded-md bg-transparent border-2 border-zinc-800 text-white" name="content" placeholder="Write your entry..." required></textarea>
    <input class="px-5 py-2 rounded-md bg-blue-500" type="hidden" name="userId" value="<%= userId %>">
    <button class="px-5 py-2 rounded-md bg-blue-500" type="submit">Add Entry</button>
</form>


  <!-- Journal List -->
  <div class="w-full max-w-md">
    <% entries.forEach(function(entry) { %>
      <%- include('partials/entryCard', { entry: entry }) %>
    <% }) %>
  </div>

</body>
</html>

